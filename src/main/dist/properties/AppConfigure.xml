<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
    <bean id="manager" class="edu.mcw.rgd.indexer.Manager" >
        <property name="version" value="Indexer v. 0.1.0 Feb 9, 2017" />
        <property name="threadCount" value="10"/>
        <property name="admin" ref="admin"/>
        <property name="ontSynonyms" ref="ontologySynonyms"/>
        <property name="rgdIndex" ref="rgdIndex"/>
        <property name="envrionments">
            <list>
                <value>dev</value>
                <value>test</value>
                <value>cur</value>
                <value>prod</value>
                <value>someName</value>
            </list>
        </property>

     </bean>
    <bean id="client" class="edu.mcw.rgd.indexer.client.ESClient" init-method="init" destroy-method="destroy"/>
    <bean id="rdao" class="edu.mcw.rgd.indexer.dao.IndexDAO">
    </bean>
    <bean id="ontologySynonyms" class="edu.mcw.rgd.indexer.OntologySynonyms"/>

    <bean id="admin" class="edu.mcw.rgd.indexer.client.IndexAdmin">
            <property name="rgdIndex" ref="rgdIndex"/>
    </bean>
    <bean id="rgdIndex" class="edu.mcw.rgd.indexer.model.RgdIndex">

    </bean>
</beans>