<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
    <bean id="manager" class="edu.mcw.rgd.indexer.Manager" >
        <property name="version" value="Elastic Search Indexer  build Feb 06, 2023" />
        <property name="threadCount" value="10"/>
        <property name="admin" ref="admin"/>
        <property name="rgdIndex" ref="rgdIndex"/>
        <property name="ontologySynonyms" ref="ontologySynonyms"/>
        <property name="envrionments">
            <list>
                <value>dev</value>
                <value>test</value>
                <value>cur</value>
                <value>prod</value>
                <value>someName</value>
            </list>
        </property>

     </bean>
    <bean id="clientInit" class="edu.mcw.rgd.services.ClientInit" init-method="init" destroy-method="destroy"/>
    <bean id="rdao" class="edu.mcw.rgd.indexer.dao.IndexDAO">
    </bean>

    <bean id="admin" class="edu.mcw.rgd.services.IndexAdmin">
<!--            <property name="rgdIndex" ref="rgdIndex"/>-->
    </bean>
    <bean id="rgdIndex" class="edu.mcw.rgd.datamodel.RgdIndex"/>
    <bean id="ontologySynonyms" class="edu.mcw.rgd.indexer.OntologySynonyms"/>
    <bean id="bulkIndexProcessor" class="edu.mcw.rgd.indexer.dao.variants.BulkIndexProcessor" init-method="init" destroy-method="destroy"/>


</beans>

